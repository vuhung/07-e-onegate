<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>LienKetWebsite</portlet-name>
		<display-name>LienKetWebsite</display-name>
		<portlet-class>com.liferay.util.bridges.mvc.MVCPortlet</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/view.jsp</value>
		</init-param>		
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>LienKetWebsite</title>
			<short-title>LienKetWebsite</short-title>
			<keywords>LienKetWebsite</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>linkgroupadmin</portlet-name>
		<display-name>LinkGroupAdmin</display-name>
		<portlet-class>
			com.vsi.lienketwebsite.LinkGroupAdmin
		</portlet-class>		
		<init-param>
			<name>view-jsp</name>
			<value>/html/linkgroupadmin/view_add_linkgroup.jsp</value>
		</init-param>	
		<init-param>
			<name>add-process-action-success-action</name> 
			<value>false</value>
		</init-param>
		<init-param>
			<name>edit-linkgroup-jsp</name>
			<value>/html/linkgroupadmin/edit_linkGroup.jsp</value>
		</init-param>	
		<init-param>
			<name>add-link-jsp</name>
			<value>/html/linkgroupadmin/view_add_link.jsp</value>
		</init-param>	
		<init-param>
			<name>edit-link-jsp</name>
			<value>/html/linkgroupadmin/edit_link.jsp</value>
		</init-param>		
		<init-param>
			<name>admin-actions-jsp</name>
			<value>/html/linkgroupadmin/admin_actions.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>LinkGroupAdmin</title>
			<short-title>LinkGroupAdmin</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>linkgroupuser</portlet-name>
		<display-name>LinkGroupUser</display-name>
		<portlet-class>
			com.vsi.lienketwebsite.LinkGroupUser
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/linkgroupuser/view.jsp</value>
		</init-param>
		<init-param>
			<name>add-process-action-success-action</name> 
			<value>false</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>LinkGroupUser</title>
			<short-title>LinkGroupUser</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>